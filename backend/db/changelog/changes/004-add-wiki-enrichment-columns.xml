<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-add-enriched-data-column" author="ai-cup-2025">
        <addColumn tableName="emails">
            <column name="enriched_data" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="004-add-enriched-flag-column" author="ai-cup-2025">
        <addColumn tableName="emails">
            <column name="enriched" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="004-add-enriched-at-column" author="ai-cup-2025">
        <addColumn tableName="emails">
            <column name="enriched_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
