<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-teams-table" author="claude">
        <createTable tableName="teams">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="icon" type="varchar(10)"/>
            <column name="is_active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-create-team-agents-table" author="claude">
        <createTable tableName="team_agents">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="team_id" type="integer">
                <constraints nullable="false"
                             foreignKeyName="fk_team_agents_team"
                             references="teams(id)"
                             deleteCascade="true"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="icon" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="personality" type="text"/>
            <column name="responsibilities" type="text"/>
            <column name="style" type="text"/>
            <column name="position_order" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_decision_maker" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-add-team-agents-index" author="claude">
        <createIndex indexName="idx_team_agents_team_id" tableName="team_agents">
            <column name="team_id"/>
        </createIndex>
        <createIndex indexName="idx_team_agents_order" tableName="team_agents">
            <column name="team_id"/>
            <column name="position_order"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
